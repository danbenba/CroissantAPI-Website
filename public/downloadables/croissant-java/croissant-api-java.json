{
  "name": "CroissantAPI Java Client",
  "version": "1.0.0",
  "description": "Client Java officiel pour l'API Croissant",
  "author": "Équipe Croissant",
  "license": "MIT",
  "main": "CroissantAPI.java",
  "files": [
    "CroissantAPI.java",
    "CroissantAPIExample.java",
    "README_CroissantAPI_Java.md",
    "pom.xml",
    "build.gradle"
  ],
  "requirements": {
    "java": "8+",
    "dependencies": [
      "com.google.code.gson:gson:2.10.1"
    ]
  },
  "features": [
    "Gestion des utilisateurs",
    "Gestion des jeux",
    "Gestion des objets et inventaire",
    "Système d'échanges",
    "Gestion des lobbies",
    "Gestion des studios",
    "OAuth2",
    "Recherche globale"
  ],
  "endpoints": {
    "base_url": "https://croissant-api.fr/api",
    "authentication": "Bearer Token",
    "format": "JSON"
  },
  "examples": {
    "basic_usage": "CroissantAPIExample.java",
    "documentation": "README_CroissantAPI_Java.md"
  }
}
