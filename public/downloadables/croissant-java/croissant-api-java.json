{
  "name": "CroissantAPI Java Client",
  "version": "1.0.0",
  "description": "Official Java client for the Croissant API",
  "author": "Croissant Team",
  "license": "MIT",
  "main": "CroissantAPI.java",
  "files": [
    "CroissantAPI.java",
    "CroissantAPIExample.java",
    "README_CroissantAPI_Java.md",
    "pom.xml",
    "build.gradle"
  ],
  "requirements": {
    "java": "8+",
    "dependencies": [
      "com.google.code.gson:gson:2.10.1"
    ]
  },
  "features": [
    "User management",
    "Game management",
    "Item and inventory management",
    "Trading system",
    "Lobby management",
    "Studio management",
    "OAuth2",
    "Global search"
  ],
  "endpoints": {
    "base_url": "https://croissant-api.fr/api",
    "authentication": "Bearer Token",
    "format": "JSON"
  },
  "examples": {
    "basic_usage": "CroissantAPIExample.java",
    "documentation": "README_CroissantAPI_Java.md"
  }
}
